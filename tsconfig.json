{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strictNullChecks": true,
    "declaration": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    ".idea"
  ]
}
